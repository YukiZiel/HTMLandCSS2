{
 "extends": ["stylelint-config-recommended-scss"],
 "rules": {
    "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
    "space-around-operators": true,
    "quotes": "double",
    "lowercase": true,
    "no-raw-text": true,
    "no-empty-rules": true,
    "specificity": "id,class,type"
}
}